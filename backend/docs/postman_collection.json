      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"+919876543210\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/auth/send-otp",
              "host": ["{{api_url}}"],
              "path": ["auth", "send-otp"]
            },
            "description": "Send OTP to mobile number for authentication"
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile\": \"+919876543210\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/auth/verify-otp",
              "host": ["{{api_url}}"],
              "path": ["auth", "verify-otp"]
