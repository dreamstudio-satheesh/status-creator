# Tamil Status Creator - Flutter Environment Configuration
# Production Server Configuration for status.dreamcoderz.com

# API Configuration - Production Server
API_BASE_URL=https://status.dreamcoderz.com/api/v1
LARAVEL_BASE_URL=https://status.dreamcoderz.com
STORAGE_BASE_URL=https://status.dreamcoderz.com/storage
API_TIMEOUT=30000

# App Configuration
APP_NAME=Tamil Status Creator
APP_VERSION=1.0.0
DEBUG_MODE=true
ENABLE_ANALYTICS=false
ENABLE_BIOMETRIC=true
ENABLE_OFFLINE_MODE=true

# Development Settings (for local testing)
# LOCAL_API_URL=http://10.0.2.2:8000/api/v1
# LOCAL_LARAVEL_URL=http://10.0.2.2:8000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_IN_APP_PURCHASE=true
ENABLE_CRASH_REPORTING=false

# Performance Settings
IMAGE_CACHE_SIZE=50
MAX_CONCURRENT_DOWNLOADS=3
REQUEST_TIMEOUT=30

# Tamil Text Configuration
DEFAULT_TAMIL_FONT=Tamil
FALLBACK_FONT=Catamaran
ENABLE_TAMIL_KEYBOARD=true

# Subscription & Payment
RAZORPAY_KEY_ID=your_razorpay_key_id
PREMIUM_PLAN_ID=premium_monthly
PREMIUM_PRICE=99.0

# Social Sharing
SHARE_URL_BASE=https://status.dreamcoderz.com/share
PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.tamilstatus.creator

# Support & Help
SUPPORT_EMAIL=support@dreamcoderz.com
HELP_URL=https://status.dreamcoderz.com/help
PRIVACY_POLICY_URL=https://status.dreamcoderz.com/privacy
TERMS_URL=https://status.dreamcoderz.com/terms